{
  "manifest_version": 3,
  "name": "Purefusion TorrentBridge",
  "version": "1.0.5",
  "version_name": "1.0.5 â€“ Retry on Failure Option",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "64": "icon/icon_64.png",
    "128": "icon/icon_128.png"
  },
  "action": {
    "default_icon": {
      "32": "icon/icon_32.png",
      "48": "icon/icon_48.png",
      "64": "icon/icon_64.png"
    },
    "default_title": "__MSG_extensionTitle__"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "storage"
  ],

  // Safe defaults for local testing
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],

  // Keep empty to avoid review flags; we request exact hosts at runtime
  "optional_host_permissions": [],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "view/options.html",
    "open_in_tab": true
  }
}
