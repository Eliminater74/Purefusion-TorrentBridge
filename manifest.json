{
  "manifest_version": 3,
  "name": "Purefusion TorrentBridge",
  "version": "1.0.3",
  "description": "Add torrent and magnet links to your BitTorrent client's web interface.",
  "default_locale": "en",
  "icons": {
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "64": "icon/icon_64.png",
    "128": "icon/icon_128.png"
  },
  "action": {
    "default_icon": {
      "32": "icon/icon_32.png",
      "48": "icon/icon_48.png",
      "64": "icon/icon_64.png"
    },
    "default_title": "Purefusion TorrentBridge"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
  ],
  "host_permissions": [],
  "optional_host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "view/options.html",
    "open_in_tab": true
  }
}
